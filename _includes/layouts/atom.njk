<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom" xml:lang="{{ metadata.language or page.lang }}">
  <title type="text">{{ metadata.title }}</title>
  {%- if subtitle %}
  <subtitle type="text">{{ subtitle }}</subtitle>
  {%- endif %}
  <link rel="alternate" type="text/html" href="{{ metadata.url | addPathPrefixToFullUrl }}" />
  <link rel="self" type="application/atom+xml" href="{{ permalink | htmlBaseUrl(metadata.url) }}" />
  <updated>{{ collections.posts | getNewestCollectionItemDate | dateToRfc3339 }}</updated>
  <id>{{ permalink | htmlBaseUrl(metadata.url) }}</id>
  {{ content | safe }}
  {%- if elsewhere %}
  <p><a href="{{ link }}">Continue reading on {{ elsewhere }}&hellip;</a></p>
  {%- endif %}
</feed>
