{%- for post in postslist %}
{%- set absolutePostUrl %}{{ post.url | htmlBaseUrl(metadata.url) }}{% endset %}
  <entry>
    <title type="text">{{ post.data.title }}</title>
    {%- if post.data.description %}
    <summary type="text">{{ post.data.description }}</summary>
    {%- endif %}
    {%- if post.data.link %}
    <link rel="alternate" type="text/html" href="{{ post.data.link }}" />
    <link rel="related" type="text/html" href="{{ absolutePostUrl }}" />
    {%- else %}
    <link rel="alternate" type="text/html" href="{{ absolutePostUrl }}" />
    {%- endif %}
    <published>{{ post.date | dateToRfc3339 }}</published>
    <updated>{{ post.date | dateToRfc3339 }}</updated>
    <id>{{ absolutePostUrl }}</id>
    <author>
      <name>{{ metadata.author.name }}</name>
      <uri>{{ metadata.author.url }}</uri>
    </author>
    <content type="html">{{ post.content | renderTransforms(post.data.page, metadata.url) }}</content>
  </entry>
{%- endfor %}
